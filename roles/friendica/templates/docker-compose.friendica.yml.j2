---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik
  friendica:

services:
  web:
    image: nginx
    links:
      - app
    volumes:
      - "{{ volumes_root }}/friendica/nginx/nginx.conf:/etc/nginx/nginx.conf:ro"    
    restart: unless-stopped
    networks:
      - traefik_network 
    labels:
      - "traefik.http.services.friendica.loadbalancer.server.scheme=http"
      - "traefik.http.services.friendica.loadbalancer.server.port=80"
{% include './labels.j2' %}
  
  friendica:
    restart: unless-stopped
    image: friendica:{{ friendica.version }}
    networks:
      - friendica
    depends_on:
      - friendica_db
    volumes:
      - "{{ volumes_root }}/friendica/html:/var/www/html"
    environment:
      - PUID={{ uid_output.stdout }}
      - PGID={{ gid_output.stdout }}
      - MYSQL_USER=friendica_user
      - MYSQL_PASSWORD={{ lookup('password', './settings/passwords/friendica_db_password chars=ascii_letters') }}
      - MYSQL_DATABASE=friendica_db
      - MYSQL_HOST=friendica_db
      - REDIS_HOST=friendica_redis
      - FRIENDICA_TZ={{ common_timezone }}
      - FRIENDICA_ADMIN_MAIL={{ admin_email }}
      - FRIENDICA_URL={{ service_domain }}
      - FRIENDICA_SITENAME={{ service_domain }}

  friendica_db:
    image: mariadb
    restart: unless-stopped
    networks:
      - friendica
    environment:
      - MYSQL_DATABASE=friendica_db
      - MYSQL_PASSWORD={{ lookup('password', './settings/passwords/friendica_db_password chars=ascii_letters') }}
      - MYSQL_USER=friendica_user
      - MYSQL_RANDOM_ROOT_PASSWORD=yes
    volumes:
      - "{{ volumes_root }}/friendica/db:/var/lib/mysql"

  friendica_redis:
    image: redis
    restart: unless-stopped
    networks:
      - friendica
