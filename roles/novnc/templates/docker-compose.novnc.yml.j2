---
version: '3'

# This networks section required for the package to be visible to Traefik.
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  novnc:
    image: geek1011/easy-novnc:{{ novnc.version }}
    networks:
      - traefik_network
    restart: unless-stopped
    environment:
      NOVNC_ADDR: ":8080"
      NOVNC_HOST: "{{ novnc.host }}"
      NOVNC_PORT: "{{ novnc.port }}"
      NOVNC_PARAMS: "resize=remote"
      NOVNC_NO_URL_PASSWORD: "1"
    labels:
      - "traefik.http.services.novnc.loadbalancer.server.scheme=http"
      - "traefik.http.services.novnc.loadbalancer.server.port=8080"
{% include './labels.j2' %}
