- name: Set ipTables port 2222->22
  iptables:
    table: nat
    chain: PREROUTING
    protocol: tcp
    destination_port: 2222
    to_destination: 10.0.0.1:22
    jump: DNAT
  become: yes

- name: Set ipTables port 80->80
  iptables:
    table: nat
    chain: PREROUTING
    protocol: tcp
    destination_port: 80
    to_destination: 10.0.0.1:80
    jump: DNAT
  become: yes

