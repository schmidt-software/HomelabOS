---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  unifi-controller:
    image: linuxserver/unifi-controller
    environment:
      - PUID=1000
      - PGID=1000
      - MEM_LIMIT=1024M #optional
    volumes:
      - "{{ volumes_root }}/unificontroller/config:/config"
    ports:
      - 3478:3478/udp
      - 10001:10001/udp
      - 8081:8081
      - 8443:8443
      - 8843:8843
      - 8880:8880
      - 6789:6789
    restart: unless-stopped
    networks:
      - traefik_network
    labels:
      - "traefik.http.services.unificontroller.loadbalancer.server.scheme=http"
      - "traefik.http.services.unificontroller.loadbalancer.server.port=8080"
      - "traefik.http.routers.unificontroller-http.middlewares={% if unificontroller.https_only %}redirect@file, {% else %}{% if unificontroller.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.unificontroller.middlewares={% if unificontroller.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
{% if enable_tor %}
      - "traefik.http.routers.unificontroller-tor-http.middlewares={% if unificontroller.auth %}{% if authelia.enable %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
{% include './labels.j2' %}
