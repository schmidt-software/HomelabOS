---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  xmpp-server:
    image: joschi/prosody-alpine:{{ prosody.version }}
    restart: unless-stopped
    volumes:
      - "{{ volumes_root }}/prosody/vhosts:/etc/prosody/conf.d"
      - "{{ volumes_root }}/prosody/modules:/usr/local/lib/prosody/modules"
      - "{{ volumes_root }}/prosody/data:/var/lib/prosody/data"
      - "{{ volumes_root }}/prosody/certs:/etc/prosody/certs:ro/"
      - "{{ volumes_root }}/prosody/prosody.pid:/var/run/prosody/prosody.pid"
    ports:
      - '5222:5222'
      - '5269:5269'
    labels:
      - traefik.enable=true
      - traefik.docker.network=homelabos_traefik
      - traefik.http.routers.xmpp-server.rule=Host(`{{ service_domain }}`)
      - traefik.http.routers.xmpp-server.entrypoints=https
      - traefik.http.routers.xmpp-server.service=xmpp-server
      - traefik.http.routers.xmpp-server.tls=true
      - traefik.http.routers.xmpp-server.tls.domains[0].main={{ service_domain }}
      - traefik.http.routers.xmpp-server.tls.domains[1].main={{ prosody.muc_domain }}
{% for vhost in prosody.vhosts %}
      - traefik.http.routers.xmpp-server.tls.domains[{{ loop.index + 1 }}].main={{ vhost }}
{% endfor %}
      - traefik.http.routers.xmpp-server.tls.certresolver=http
      - traefik.http.services.xmpp-server.loadbalancer.server.scheme=http
      - traefik.http.services.xmpp-server.loadbalancer.server.port=5280
    networks:
      - traefik_network

  # mailu certdumper
  xmpp-certdumper:
    build:
      context: certdumper
      dockerfile: certdumper/Dockerfile
    restart: unless-stopped
    volumes:
      - "{{ volumes_root }}/traefik/acme.json:/data/acme.json:ro"
      - "{{ volumes_root }}/prosody/certs:/data/certs"

  # XMPP http external upload: prosody-filer

  # XMPP stun/turn server: eturnal
