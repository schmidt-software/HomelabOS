---
version: "3.2"

networks:
  traefik_network:
    external:
      name: homelabos_traefik
  papercups:

services:
  papercups:
    image: papercups/papercups:latest
    command: sh -c "sleep 10 && /entrypoint.sh db createdb && /entrypoint.sh db migrate && echo 'running' && /entrypoint.sh run"
    depends_on:
      - db
    networks:
      - traefik_network
      - papercups
    environment:
      DATABASE_URL: "ecto://postgres:postgres@db/postgres"
      # PUT YOUR OWN SECRET KEYBASE HERE
      SECRET_KEY_BASE: "{{lookup('password', './settings/passwords/papercups_secret_key chars=ascii_letters')}}"
      BACKEND_URL: "localhost"
      MIX_ENV: "prod"
      REQUIRE_DB_SSL: "false"
    labels:
      - "traefik.http.services.papercups.loadbalancer.server.scheme=http"
      - "traefik.http.services.papercups.loadbalancer.server.port=4000"
{% include './labels.j2' %}
  db:
    image: postgres:{{ papercups.db_version }}
    volumes:
      - "{{ volumes_root }}/papercups/db-data:/var/lib/postgresql/data"
    networks:
      - papercups
    environment:
      POSTGRES_PASSWORD: postgres
