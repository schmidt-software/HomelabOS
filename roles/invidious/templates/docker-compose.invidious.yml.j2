---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik
  invidious:

services:
  invidious_db:
    image: postgres:10
    restart: unless-stopped
    networks:
      - invidious
    volumes:
      - "{{ volumes_root }}/invidious/db:/var/lib/postgresql/data"
      - "{{ volumes_root }}/invidious/repo/config:/config/sql"
      - "{{ volumes_root }}/invidious/repo/docker/init-invidious-db.sh:/docker-entrypoint-initdb.d/init-invidious-db.sh"
    environment:
      POSTGRES_DB: invidious
      POSTGRES_USER: kemal
      POSTGRES_PASSWORD: "{{ lookup('password', './settings/passwords/invidious_db_password chars=ascii_letters') }}"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER"]
  
  invidious:
    image: "quay.io/invidious/invidious:{{ invidious.version }}"
    restart: unless-stopped
    networks:
      - traefik_network
      - invidious
    depends_on:
      - invidious_db
    environment:
      INVIDIOUS_CONFIG: |
        channel_threads: 1
        check_tables: true
        feed_threads: 1
        db:
          user: kemal
          dbname: invidious
          host: invidious_db
          port: 5432
          password: "{{  lookup('password', './settings/passwords/invidious_db_password chars=ascii_letters')  }}"
        full_refresh: false
        https_only: false
        registration_enabled: false
        domain:
      # external_port:
    labels:
      - "traefik.http.services.invidious.loadbalancer.server.scheme=http"
      - "traefik.http.services.invidious.loadbalancer.server.port=3000"
{% include './labels.j2' %}
