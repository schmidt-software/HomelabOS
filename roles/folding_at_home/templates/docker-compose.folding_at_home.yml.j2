---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  folding-at-home:
    # REQUIRED
    image: johnktims/folding-at-home
    command: --web-allow=0/0:7396 --allow=0/0:7396 --user={{ folding_at_home.username}} --team={{ folding_at_home.team }}  --power={{ folding_at_home.power }}
    restart: unless-stopped
    ports:
      - 7396:7396
    labels:
      - "traefik.http.services.folding_at_home.loadbalancer.server.scheme=http"
      - "traefik.http.services.folding_at_home.loadbalancer.server.port=7396"
      - "traefik.http.routers.folding_at_home-http.middlewares={% if folding_at_home.https_only %}redirect@file, {% else %}{% if folding_at_home.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.folding_at_home.middlewares={% if folding_at_home.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
{% if enable_tor %}
      - "traefik.http.routers.folding_at_home-tor-http.middlewares={% if folding_at_home.auth %}{% if authelia.enable %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
{% include './labels.j2' %}
